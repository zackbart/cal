# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/churchhub

# Cal.com Platform Configuration
CAL_CLIENT_ID=your_cal_client_id
CAL_CLIENT_SECRET=your_cal_client_secret
CAL_API_URL=https://api.cal.com
# Local development
# CAL_REDIRECT_URI=http://localhost:3000/auth/callback
# Production
CAL_REDIRECT_URI=https://cal.zackb.art/auth/callback

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key

# Frontend URL for CORS
# Local development
# FRONTEND_URL=http://localhost:3000
# Production
FRONTEND_URL=https://cal.zackb.art

# Optional: Redis for background jobs
REDIS_URL=redis://localhost:6379

# Optional: Email/SMS providers
SENDGRID_API_KEY=your_sendgrid_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Server Configuration
PORT=3001
NODE_ENV=development
