# Cal.com Platform Configuration
NEXT_PUBLIC_CAL_CLIENT_ID=your_cal_client_id
# Local development
NEXT_PUBLIC_CAL_REDIRECT_URI=http://localhost:3000/auth/callback
NEXT_PUBLIC_API_URL=http://localhost:3001
# Production
# NEXT_PUBLIC_CAL_REDIRECT_URI=https://cal.zackb.art/auth/callback
# NEXT_PUBLIC_API_URL=https://api.zackb.art

# Neon (Stack) Auth Configuration
# Frontend uses these to initialize the auth client and UI
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_client_key
# Server-side secret (only used if server code reads from web env; prefer API .env)
STACK_SECRET_SERVER_KEY=your_stack_secret_server_key

# Sidecar API Configuration (optional legacy var)
SIDECAR_API_URL=https://api.zackb.art
SIDECAR_API_KEY=your_sidecar_api_key

# Database Configuration (not used by frontend at runtime)
DATABASE_URL=postgresql://username:password@localhost:5432/churchhub

# Encryption (if any client-only features require it; generally keep server-side)
ENCRYPTION_KEY=your_32_character_encryption_key

# Optional: Redis for background jobs (frontend does not use directly)
REDIS_URL=redis://localhost:6379

# Optional: Email/SMS providers (frontend does not use directly)
SENDGRID_API_KEY=your_sendgrid_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
