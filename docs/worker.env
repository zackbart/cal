# Worker - Development Environment

# Database (same as API)
DATABASE_URL=postgresql://user:password@localhost:5432/churchhub_dev
DATABASE_CA_CERT=
DATABASE_SSL=false

# Background Workers (Railway Redis)
REDIS_URL=redis://default:password@redis.railway.internal:6379
WORKER_CONCURRENCY=5

# Worker Configuration
WORKER_RETRY_ATTEMPTS=3
WORKER_RETRY_DELAY=5000
WORKER_HEALTH_CHECK_INTERVAL=30000

# AI Integration
OPENAI_API_KEY=your_dev_openai_api_key
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_PII_DETECTION=true

# Security
ENCRYPTION_KEY=your_dev_encryption_key_32_chars
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Communication
API_URL=http://localhost:3001
API_SECRET_KEY=your_dev_api_secret_key

# Monitoring (Optional)
SENTRY_DSN=your_dev_sentry_dsn
LOG_LEVEL=debug

# Environment
NODE_ENV=development

# Job Queue Configuration
QUEUE_PREFIX=churchhub
QUEUE_DEFAULT_DELAY=0
QUEUE_DEFAULT_ATTEMPTS=3
QUEUE_DEFAULT_BACKOFF=5000

# Specific Job Configurations
SUMMARY_GENERATION_DELAY=300000
REMINDER_SEND_DELAY=86400000
JIT_VALIDATION_DELAY=0
PURGE_SENSITIVE_DELAY=604800000

# Email & Notifications (for worker jobs)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@churchhub.com

# SMS Notifications (for worker jobs)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Data Retention Policies
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=365
SENSITIVE_DATA_RETENTION_DAYS=1095
